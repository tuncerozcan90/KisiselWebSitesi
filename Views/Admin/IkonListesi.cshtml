@using KisiselWebSitesi.Models.Siniflar
@model List<ikonlar>
@{
    ViewBag.Title = "IkonListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2 class="mb-4">İkonlar Sayfası</h2>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Ikon</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>


    @foreach (var x in Model)
        {
        <tr>
            <td>@x.Id</td>
            <td><i class="@x.Ikon"></i></td>
            <td><a href="/Admin/ikonGetir/@x.Id" class="btn btn-primary">Guncelle</a></td>
            <td><a href="/Admin/ikonSil/@x.Id" class="btn btn-danger">Sil</a> </td>
        </tr>
        }
 </table>
<a href="/Admin/YeniIkon" class="btn btn-primary">Yeni İkon Ekle</a>



